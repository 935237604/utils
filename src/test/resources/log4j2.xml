<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="level" value="DEBUG"/>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [user:%X{USER}] %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${level}">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>